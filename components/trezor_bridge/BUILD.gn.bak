import("//brave/components/brave_wallet/common/buildflags/buildflags.gni")
import("//mojo/public/tools/bindings/mojom.gni")

assert(brave_wallet_enabled)

static_library("trezor_bridge") {
  sources = [
    "trezor_bridge_handler.cc",
    "trezor_bridge_handler.h",
    "mojo_trezor_web_ui_controller.cc",
    "mojo_trezor_web_ui_controller.h"
  ]
  deps = [
    "//base",
    ":mojo_bindings",
    "//brave/components/resources:static_resources",
    "//brave/components/resources:strings_grit",
    "//content/public/browser",
  ]
}

copy("copy_trezor_data") {
  node_data_dir = "//brave/node_modules/trezor-connect/data"
  sources = [
    "$node_data_dir/bridge",
    "$node_data_dir/coins.json",
    "$node_data_dir/config.json",
    "$node_data_dir/firmware",
    "$node_data_dir/messages",
  ]
  outputs = [ "$root_gen_dir/brave/components/trezor_bridge/resources/data/{{source_file_part}}" ]
}

mojom("mojo_bindings") {
  sources = [ "trezor_bridge.mojom" ]

  public_deps = [
    "//mojo/public/mojom/base",
    "//ui/base/mojom",
    "//url/mojom:url_mojom_gurl",
  ]
}